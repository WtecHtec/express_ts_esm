{
  "compilerOptions": {
			"module": "ESNext",
			"target": "ES6",
			"moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
			"strict": true,
			"skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}